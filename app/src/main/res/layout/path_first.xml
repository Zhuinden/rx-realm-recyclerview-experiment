<?xml version="1.0" encoding="utf-8"?>
<com.zhuinden.rxrealm.FirstView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <EditText
        android:id="@+id/first_dog_edittext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:hint="Enter dog name"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/first_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/first_dog_edittext"/>
</com.zhuinden.rxrealm.FirstView>